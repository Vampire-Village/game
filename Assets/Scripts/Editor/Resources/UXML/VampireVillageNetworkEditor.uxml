<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ui="UnityEngine.UIElements"
    xmlns:ue="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../UIElementsSchema/UIElements.xsd"
>
    <ui:VisualElement class="root">
        <ui:VisualElement class="group">
            <ui:Label text="Network Settings" class="header" />
            <ue:PropertyField binding-path="networkAddress" label="Address" />
            <ue:PropertyField binding-path="networkPort" label="Port" />
            <ue:PropertyField binding-path="maxConnections" />
            <ue:PropertyField binding-path="forceClient" label="Force Client?" />
        </ui:VisualElement>

        <ui:VisualElement class="group">
            <ui:Label text="Scene Settings" class="header" />
            <ue:PropertyField binding-path="networkScene" label="Network" />
            <ue:PropertyField binding-path="menuScene" label="Menu" />
            <ue:PropertyField binding-path="lobbyScene" label="Lobby" />
            <ue:PropertyField binding-path="gameScene" label="Game" />
        </ui:VisualElement>

        <ui:VisualElement class="group">
            <ui:Label text="Prefabs" class="header" />
            <ue:PropertyField binding-path="playerPrefab" label="Client" />
            <ue:PropertyField binding-path="lobbyPlayerPrefab" label="Lobby Player" />
            <ue:PropertyField binding-path="gamePlayerPrefab" label="Game Player" />
        </ui:VisualElement>
    </ui:VisualElement>
</UXML>
